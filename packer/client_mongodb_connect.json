{
    "variables": {
        "gcp_account_file": "{{ env `GCP_ACCOUNT_FILE_JSON`}}",
        "gcp_project_id": "{{ env `GCP_PROJECT_ID` }}",
        "gcp_zone": "{{ env `GCP_ZONE` }}",
        "aws_access_key": "{{ env `AWS_ACCESS_KEY` }}",
        "aws_secret_key": "{{ env `AWS_SECRET_KEY` }}",
        "aws_region": "{{ env `AWS_REGION` }}",
        "role": "consul-client-listing",
	"ami_owner": "{{ env `AMI_OWNER` }}",
        "type": "{{ env `NODE_TYPE` }}"
    },
    "builders": [
      {
        "image_name": "gcp-ubuntu-consul-{{ user `type` }}-mongodb-connect",
        "type": "googlecompute",
        "account_file": "{{ user `gcp_account_file` }}",
        "project_id": "{{ user `gcp_project_id` }}",
        "source_image": "gcp-ubuntu-consul-{{ user `type` }}-mongodb-noconnect",
        "ssh_username": "ubuntu",
        "machine_type": "n1-standard-1",
        "zone" : "{{ user `gcp_zone` }}",
        "tags": ["{{ user `role` }}"]
      },
      { 
        "type": "amazon-ebs",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "region": "{{user `aws_region`}}",
        "source_ami_filter": {
            "filters": {
                "virtualization-type": "hvm",
                "name": "aws-ubuntu-mongodb-noconnect-*",
                "root-device-type": "ebs"
            },
            "owners": ["{{ user `ami_owner` }}"],
            "most_recent": true
        },
        "instance_type": "t2.micro",
        "ssh_username": "ubuntu",
        "ami_name": "aws-ubuntu-mongodb-connect-{{timestamp}}",
        "tags": {
            "Name": "CC Demo Ubuntu MongoDB Server - With Connect",
            "owner": "thomas@hashicorp.com",
            "project": "CC Demo reInvent",
            "Base_AMI_Name": "{{ .SourceAMIName }}",
            "Base_AMI": "{{ .SourceAMI }}",
            "role": "{{ user `role` }}"
        },
	"ami_groups": ["all"]
      }
    ],
    "provisioners": [
      {
        "type": "file",
        "source": "services/mongodb-connect.hcl",
        "destination": "/tmp/mongodb.hcl"
      },
      {
	  "type": "file",
	  "source": "files/mongod.conf-connect",
	  "destination": "/tmp/mongod.conf"
      },
      {
        "type": "shell",
        "inline": [
          "sudo mv /tmp/mongodb.hcl /etc/consul/",
	  "sudo mv /tmp/mongod.conf /etc/mongod.conf",
	  "sudo rm -rf /opt/consul/*"
        ]
      }
    ]
  }
